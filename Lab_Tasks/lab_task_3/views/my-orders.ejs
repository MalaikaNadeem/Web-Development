<!-- views/my-orders.ejs -->
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2">My Orders</h1>
                <a href="/" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left"></i> Continue Shopping
                </a>
            </div>

            <% if (message) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <% if (error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <% if (orders && orders.length > 0) { %>
                <div class="row">
                    <% orders.forEach(order => { %>
                        <div class="col-12 mb-4">
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="mb-1">Order #<%= order.orderNumber %></h5>
                                        <small class="text-muted">
                                            Placed on <%= order.formattedOrderDate %>
                                        </small>
                                    </div>
                                    <div class="text-right">
                                        <span class="badge badge-pill 
                                            <% if (order.status === 'pending') { %>badge-warning<% } %>
                                            <% if (order.status === 'confirmed') { %>badge-info<% } %>
                                            <% if (order.status === 'processing') { %>badge-primary<% } %>
                                            <% if (order.status === 'shipped') { %>badge-secondary<% } %>
                                            <% if (order.status === 'delivered') { %>badge-success<% } %>
                                            <% if (order.status === 'cancelled') { %>badge-danger<% } %>
                                        ">
                                            <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h6 class="card-subtitle mb-2 text-muted">Order Items</h6>
                                            <% order.items.forEach(item => { %>
                                                <div class="d-flex justify-content-between align-items-center mb-2">
                                                    <div>
                                                        <strong><%= item.productName %></strong>
                                                        <small class="text-muted"> Ã— <%= item.quantity %></small>
                                                    </div>
                                                    <div>
                                                        $<%= item.itemTotal %>
                                                    </div>
                                                </div>
                                            <% }); %>
                                        </div>
                                        
                                        <div class="col-md-4">
                                            <div class="card bg-light">
                                                <div class="card-body">
                                                    <h6 class="card-title">Order Summary</h6>
                                                    <div class="d-flex justify-content-between">
                                                        <span>Total Items:</span>
                                                        <span><%= order.getTotalItems() %></span>
                                                    </div>
                                                    <div class="d-flex justify-content-between">
                                                        <span>Payment:</span>
                                                        <span class="badge badge-secondary">
                                                            <%= order.paymentMethod.charAt(0).toUpperCase() + order.paymentMethod.slice(1) %>
                                                        </span>
                                                    </div>
                                                    <div class="d-flex justify-content-between">
                                                        <span>Payment Status:</span>
                                                        <span class="badge 
                                                            <% if (order.paymentStatus === 'pending') { %>badge-warning<% } %>
                                                            <% if (order.paymentStatus === 'paid') { %>badge-success<% } %>
                                                            <% if (order.paymentStatus === 'failed') { %>badge-danger<% } %>
                                                            <% if (order.paymentStatus === 'refunded') { %>badge-info<% } %>
                                                        ">
                                                            <%= order.paymentStatus.charAt(0).toUpperCase() + order.paymentStatus.slice(1) %>
                                                        </span>
                                                    </div>
                                                    <hr>
                                                    <div class="d-flex justify-content-between">
                                                        <strong>Total Amount:</strong>
                                                        <strong>$<%= order.totalAmount %></strong>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <% if (order.notes) { %>
                                        <div class="mt-3">
                                            <h6 class="text-muted">Notes:</h6>
                                            <p class="mb-0"><%= order.notes %></p>
                                        </div>
                                    <% } %>
                                    
                                    <% if (order.trackingNumber) { %>
                                        <div class="mt-3">
                                            <h6 class="text-muted">Tracking Number:</h6>
                                            <code><%= order.trackingNumber %></code>
                                        </div>
                                    <% } %>
                                    
                                    <div class="mt-3 d-flex justify-content-between align-items-center">
                                        <div>
                                            <small class="text-muted">
                                                Delivery Address: <%= order.customerAddress %>
                                            </small>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                    <nav aria-label="Orders pagination">
                        <ul class="pagination justify-content-center">
                            <% if (hasPrevPage) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                                </li>
                            <% } %>

                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>

                            <% if (hasNextPage) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                <% } %>

            <% } else { %>
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-shopping-bag fa-5x text-muted"></i>
                    </div>
                    <h3 class="text-muted mb-3">No Orders Yet</h3>
                    <p class="text-muted mb-4">
                        You haven't placed any orders yet. Start shopping to see your orders here!
                    </p>
                    <a href="/" class="btn btn-primary">Start Shopping</a>
                </div>
            <% } %>
        </div>
    </div>
</div>

<style>
.badge-pill {
    border-radius: 50px;
}

.card {
    transition: box-shadow 0.15s ease-in-out;
}

.card:hover {
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
}

.badge-warning {
    background-color: #ffc107;
    color: #212529;
}

.badge-info {
    background-color: #17a2b8;
}

.badge-primary {
    background-color: #007bff;
}

.badge-secondary {
    background-color: #6c757d;
}

.badge-success {
    background-color: #28a745;
}

.badge-danger {
    background-color: #dc3545;
}
</style>